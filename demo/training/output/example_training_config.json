{
  "model": {
    "name": "liuhaotian/llava-v1.5-7b",
    "type": "llava",
    "cache_dir": null
  },
  "data": {
    "train_path": "./output/splits/train.jsonl",
    "val_path": "./output/splits/val.jsonl",
    "max_length": 1024,
    "image_size": 336
  },
  "training": {
    "method": "lora",
    "learning_rate": 0.00002,
    "batch_size": 4,
    "gradient_accumulation_steps": 4,
    "num_epochs": 3,
    "warmup_ratio": 0.03,
    "weight_decay": 0.0,
    "max_grad_norm": 1.0,
    "lora": {
      "rank": 64,
      "alpha": 128,
      "dropout": 0.05,
      "target_modules": [
        "q_proj",
        "v_proj",
        "k_proj",
        "o_proj"
      ],
      "bias": "none"
    }
  },
  "hardware": {
    "device": "cuda",
    "mixed_precision": "bf16",
    "gradient_checkpointing": true,
    "num_workers": 4
  },
  "checkpointing": {
    "save_steps": 100,
    "save_total_limit": 3,
    "output_dir": "./output",
    "resume_from_checkpoint": null
  },
  "logging": {
    "log_steps": 10,
    "tensorboard_dir": "./runs",
    "report_to": [
      "tensorboard"
    ]
  },
  "experiment_name": "custom_sam2_finetuning",
  "seed": 42
}